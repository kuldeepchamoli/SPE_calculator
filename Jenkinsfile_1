pipeline {
    agent any

    stages {
        stage('Clone Repository') {
            steps {
                git branch:'main',url:'https://github.com/kuldeepchamoli/SPE_calculator.git'
            }
        }
        
        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }
	stage('Build Docker Image') {
            steps {
                script {
                    docker.build("${DOCKER_IMAGE_NAME}", '.')
                }
            }
        }
    }
}
